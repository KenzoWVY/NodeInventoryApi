generator client {
  // Use the JS client generator provider so the runtime files are emitted as JS
  provider = "prisma-client-js"
  // Generate the client into node_modules/.prisma/client so @prisma/client can load it
  output = "../node_modules/.prisma/client" 
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Item {
  id        Int      @id @default(autoincrement())
  name      String
  description String?
  price     Float
  quantity  Int
}