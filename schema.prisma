generator client {
  provider = "prisma-client"
  // Generate the client where @prisma/client expects it at runtime
  // (relative to the schema file). This writes into node_modules/.prisma/client
  output = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Item {
  id        Int      @id @default(autoincrement())
  name      String
  description String?
  quantity  Int
}